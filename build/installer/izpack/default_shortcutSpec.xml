<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<shortcuts>
  <skipIfNotSupported />

	<programGroup defaultName="RuoffMessenger" location="applications"/>
	
	<shortcut
		name="Ruoff Messenger"
		programGroup="yes"
		desktop="yes"
		applications="no"
		startMenu="no"
		startup="no"
		target="$INSTALL_PATH\RuoffMessenger.exe"
		commandLine=""
		description="Spark"
		iconFile="$INSTALL_PATH\resources\RuoffMessenger.ico"
		iconIndex="0"
		initialState="noShow">
  
		<createForPack name="RuoffMessenger"/>

	</shortcut>
	
	<shortcut
            name="Ruoff Messenger Uninstaller"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
            commandLine=""
            iconFile="%SystemRoot%\system32\SHELL32.dll"
            iconIndex="31"
            description="This uninstalls Ruoff Messenger @build.number@">
		<createForPack name="RuoffMessenger"/>
	</shortcut>
	
</shortcuts>
