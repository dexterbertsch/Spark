<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<registry>
    <pack name="RuoffMessenger">
        <value name="DisplayName"
               keypath="SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\RuoffMessenger"
               root="HKLM"
               string="RuoffMessenger"/>
        <value name="UninstallString"
               keypath="SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\RuoffMessenger"
               root="HKLM"
               string="&quot;$JAVA_HOME\bin\javaw.exe&quot; -jar &quot;$INSTALL_PATH\uninstaller\uninstaller.jar&quot;"/>
        <value name="DisplayIcon"
               keypath="SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\RuoffMessenger"
               root="HKLM"
               string="$INSTALL_PATH\bin\icons\izpack.ico"/>
        <value name="HelpLink"
               keypath="SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\RuoffMessenger"
               root="HKLM"
               string="RuoffMessenger"/>
        <value name="TaskbarGroupIcon"
	       keypath="Applications\RuoffMessenger.exe"
	       root="HKCR"
	       string="$INSTALL_PATH\resources\RuoffMessenger.ico" />	                  
    </pack>
</registry>

