<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<shortcuts>
	<skipIfNotSupported/>
	<programGroup defaultName="RuoffMessenger" location="applications"/>
	
	<shortcut
		name="RuoffMessenger"
		programGroup="yes"
		desktop="no"
		applications="no"
		startMenu="no"
		startup="no"
		target="$INSTALL_PATH/RuoffMessenger"
		commandLine=""
		type="Application"
        encoding="UTF-8"
        KdeSubstUID="true"
		workingDirectory="$INSTALL_PATH/"
		description="Spark"
		iconIndex="0"
		iconFile="$INSTALL_PATH/resources/RuoffMessenger-32x32.png"
		initialState="noShow">
  		description="Ruoff Messenger - XMPP Client"
		<createForPack name="RuoffMessenger"/>
	</shortcut>
	
	<shortcut
            name="Ruoff Messenger Uninstaller"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="java"
            commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
            iconFile="trashcan_full"
            iconIndex="0"
            type="Application"
            encoding="UTF-8"
            KdeSubstUID="true"
            workingDirectory=""
            description="This uninstalls Ruoff Messenger @build.number@">
		<createForPack name="RuoffMessenger"/>
	</shortcut>
	
</shortcuts>
